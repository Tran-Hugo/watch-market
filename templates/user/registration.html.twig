{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/registration.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
<div class="registration_container w-100 h-100 d-flex justify-content-center align-items-center">
    <div class="registration_card border rounded w-50 h-75 pt-5 pb-5 d-flex flex-column justify-content-center align-items-center">
        <h1 class="mt-5">Inscription</h1>
        {{form_start(form)}}
            <div class="mb-3">
                {{form_label(form.firstname)}} 
                {{form_widget(form.firstname)}} 
                {{form_errors(form.firstname)}} 
            </div>
            <div class="mb-3">
                {{form_label(form.lastname)}} 
                {{form_widget(form.lastname)}} 
                {{form_errors(form.lastname)}} 
            </div>
            <div class="mb-3">
                {{form_label(form.email)}} 
                {{form_widget(form.email)}} 
                {{form_errors(form.email)}} 
            </div>
            <div class="mb-3">
                {{form_widget(form.password)}} 
                {{form_errors(form.password)}} 
            </div>
        {{form_end(form)}}
    </div>
</div>

{% endblock %}
