{% extends 'base.html.twig' %}
{% block stylesheets %}
<link href="{{ asset('css/catalog.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<h1 class="ms-5 mt-4">Résultats de votre recherche :</h1>

<div class="example-wrapper">
    <div class="catalog pt-5 pb-5">
    {% for watch in watchs %}
            <div class="article-card d-flex flex-column justify-content-center rounded align-items-center h-100 shadow">
                <image class="h-50 w-50" src="{{asset("img/montres/") ~ watch.image }}"/>
                <h2>{{watch.titre}}</h2>
                <p>{{watch.description}}</p>
                <p class="fw-bold">{{watch.prix}}€</p>
                {% if app.user %}
                <button class="btn btn-light text-black" onclick="addCart({{watch.id}},{{app.user.id}})">Ajouter au panier</button>
                {% else %}
                <button class="btn btn-light text-black" onclick="addCart({{watch.id}})">Ajouter au panier</button>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
