{% extends 'base.html.twig' %}

{% block stylesheets %}
<link href="{{ asset('css/home.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
<div class="banner w-100 h-50 position-relative">
    <img class="h-100 w-100" src="{{asset('img/banner.jpg')}}"/>
    <form class="searchbar d-flex w-25" action={{path('search_watch')}}>
        {# <input class="form-control" placeholder="Rechercher"></input>
        <button class="btn btn-dark text-white">Rechercher</button> #}
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="search" placeholder="Votre montre..." aria-label="Rechercher" aria-describedby="Rechercher">
            <button class="btn btn-secondary" type="submit" id="button-addon2">Rechercher</button>
        </div>
    </form>
</div>
    <div class="d-flex justify-content-center">
    <p class="w-25 text-center fs-5 accroche">Découvrez nos montres de prestigieuses marques suisses telles que Rolex, Omega, Breitling, Tag Heuer, Jaeger-LeCoultre... Watch Market vous garantit l'authenticité et la traçabilité des montres au meilleur prix.</p>
    </div>
    <h2 class="selection-title">Notre sélection :</h2>
    <div class="carousel-container d-flex justify-content-center">    
        <div id="carouselExampleControls" class="carousel carousel-dark slide w-75 h-100" data-bs-ride="carousel">
        <div class="carousel-inner h-100 d-flex">
            <div class="carousel-item h-100 w-100 active" data-bs-interval="10000">
                <div class="watch-card-container h-100 w-100 d-flex justify-content-center">
                    <div class="watch-card h-100 w-75 d-flex justify-content-center">
                        <img src="{{asset("img/montres/") ~ watchs.0.image }}" class="h-100" alt="...">
                        <div class="card-info col-6">
                            <h2 class="text-center">{{watchs.0.titre}}</h2>
                            <div>
                                <span class="badge rounded-pill text-bg-dark">{{watchs.0.categorie.name}}</span>
                                <p class="mb-0">{{watchs.0.description}}</p>
                                <p class="mt-5 fw-bold">{{watchs.0.prix}}€</p>
                                {% if app.user %}
                                <button class="btn btn-dark text-white mt-1" onclick="addCart({{watchs.0.id}},{{app.user.id}})">Ajouter au panier</button>
                                {% else %}
                                <button class="btn btn-dark text-white mt-1" onclick="addCart({{watchs.0.id}})">Ajouter au panier</button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% for watch in watchs | slice(1) %}
            <div class="carousel-item h-100" data-bs-interval="10000">
                <div class="watch-card-container h-100 w-100 d-flex justify-content-center">
                    <div class="watch-card h-100 w-75 d-flex justify-content-center">
                        <img src="{{asset("img/montres/") ~ watch.image }}" class="h-100" alt="...">
                        <div class="card-info col-6">
                            <h2 class=" text-center">{{watch.titre}}</h2>
                            <div>
                                <span class="badge rounded-pill text-bg-dark">{{watch.categorie.name}}</span>
                                <p class="mb-0">{{watch.description}}</p>
                                <p class="mt-5 fw-bold">{{watch.prix}}€</p>
                                {% if app.user %}
                                <button class="btn btn-dark text-white mt-1" onclick="addCart({{watch.id}},{{app.user.id}})">Ajouter au panier</button>
                                {% else %}
                                <button class="btn btn-dark text-white mt-1" onclick="addCart({{watch.id}})">Ajouter au panier</button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div>
    </div>
    <h2 class="selection-title mt-3">Trouvez l'idée cadeau idéale :</h2>
    <div class="expensive-container d-flex h-50 w-75 m-auto justify-content-around">
    {% for watch in rich_watchs %}
        <div class="article-card d-flex flex-column justify-content-center rounded align-items-center h-100 shadow">
            <image class="h-50" src="{{asset("img/montres/") ~ watch.image }}"/>
            <h2>{{watch.titre}}</h2>
            <p>{{watch.description}}</p>
            <p class="fw-bold">{{watch.prix}}€</p>
            {% if app.user %}
            <button class="btn btn-light text-black" onclick="addCart({{watch.id}},{{app.user.id}})">Ajouter au panier</button>
            {% else %}
            <button class="btn btn-light text-black" onclick="addCart({{watch.id}})">Ajouter au panier</button>
            {% endif %}
        </div>
    {% endfor %}
    </div>
    <h2 class="selection-title mt-3">Une montre pour toutes les bourses :</h2>
    <div class="expensive-container d-flex h-50 w-75 m-auto justify-content-around mb-3">
    {% for watch in poor_watchs %}
        <div class="article-card d-flex flex-column justify-content-center rounded align-items-center h-100 shadow">
            <image class="h-50" src="{{asset("img/montres/") ~ watch.image }}"/>
            <h2>{{watch.titre}}</h2>
            <p>{{watch.description}}</p>
            <p class="fw-bold">{{watch.prix}}€</p>
            {% if app.user %}
            <button class="btn btn-light text-black" onclick="addCart({{watch.id}},{{app.user.id}})">Ajouter au panier</button>
            {% else %}
            <button class="btn btn-light text-black" onclick="addCart({{watch.id}})">Ajouter au panier</button>
            {% endif %}
        </div>
    {% endfor %}
    </div>   
{% endblock %}
